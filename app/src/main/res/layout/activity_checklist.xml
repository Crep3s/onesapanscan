<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChecklistActivity">

    <!-- Карточка с комментарием к заказу -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/order_comment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFF9C4"
        app:contentPadding="12dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/order_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Комментарий к заказу от клиента или менеджера" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_comment_card"
        android:layout_above="@+id/finish_order_button"
        android:clipToPadding="false"
        android:paddingVertical="4dp"
        tools:listitem="@layout/list_item_product" />

    <Button
        android:id="@+id/finish_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:text="Вернуться в главное меню"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- Экран "Заказ собран" -->
    <LinearLayout
        android:id="@+id/order_complete_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- ИЗМЕНЕНИЕ: Используем качественную векторную иконку -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_checkmark_done"
            app:tint="@color/purple_500" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Заказ успешно собран!"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Вернуться к заказам" />

    </LinearLayout>
    <View
        android:id="@+id/error_flash_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#CCFF0000"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>